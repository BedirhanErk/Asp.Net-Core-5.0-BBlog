@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h3>
                        <i class="fa fa-comment"></i> Comments
                    </h3>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Blog</th>
                                <th>User Name</th>
                                <th>Comment Content</th>
                                <th>Create Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td><a href="/Blog/BlogDetails/@item.BlogId">@item.Blog.Title</a></td>
                                    <td>@item.UserName</td>
                                    <td>@item.CommentContent</td>
                                    <td>@item.CreDate.ToString("dd/MMM/yyyy hh:mm")</td>
                                    <td>
                                        @if (item.Status == false)
                                        {
                                            <label style="font-size:13px" class="label label-danger">Passive</label>
                                        }
                                        else
                                        {
                                            <label style="font-size:13px" class="label label-primary">Active</label>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
