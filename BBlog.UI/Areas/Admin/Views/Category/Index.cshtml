@model List<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h3><i class="fa fa-list"></i> Categories</h3>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Delete</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.Status == false)
                                        {
                                            <a href="#" style="cursor:pointer"><i style="color:green" class="fa fa-refresh"></i></a>
                                        }
                                        else
                                        {
                                            <a href="#" style="cursor:pointer"><i style="color:red" class="fa fa-trash fa-lg"></i></a>
                                        }
                                    </td>
                                    <td>@item.Name</td>
                                    <td>
                                        @if (item.Status == false)
                                        {
                                            <label style="font-size:13px" class="label label-danger">Passive</label>
                                        }
                                        else
                                        {
                                            <label style="font-size:13px" class="label label-primary">Active</label>
                                        }
                                    </td>
                                    <td>
                                        <a href="#"><i class="fa fa-edit fa-lg"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

