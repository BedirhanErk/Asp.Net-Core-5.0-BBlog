@using BBlog.UI.Models
@model SendMessageModelView

@{
    ViewData["Title"] = "Send Message";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-3">
        <div class="ibox ">
            <div class="ibox-content mailbox-content">
                <div class="file-manager">
                    <a class="btn btn-block btn-primary compose-mail" href="mail_compose.html">Compose Mail</a>
                    <div class="space-25"></div>
                    <h5>Folders</h5>
                    <ul class="folder-list m-b-md" style="padding: 0">
                        <li><a href="/Admin/AdminMessage/Inbox"> <i class="fa fa-mail-forward "></i> Inbox <span class="label label-warning float-right">@ViewBag.imc</span> </a></li>
                        <li><a href="/Admin/AdminMessage/Sendbox"> <i class="fa fa-mail-reply"></i> Sendbox <span class="label label-primary float-right">@ViewBag.smc</span> </a></li>
                        <li><a href="/Admin/AdminMessage/SendMessage"> <i class="fa fa-paper-plane"></i> Send Message</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9 animated fadeInRight">
        <div class="mail-box-header">
            <h2>
                Compose mail
            </h2>
        </div>
        <div class="mail-box">
            <div class="mail-body">
                @using (Html.BeginForm("SendMessage", "AdminMessage", FormMethod.Post))
                {
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Receiver:</label>
                        <div class="col-sm-10">@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Subject:</label>
                        <div class="col-sm-10">@Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Message:</label>
                        <div class="col-sm-10">@Html.TextAreaFor(x => x.Detail, 15, 3, new { @class = "form-control" })</div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-sm btn-primary">Send</button>
                }
            </div>
        </div>
    </div>
</div>
