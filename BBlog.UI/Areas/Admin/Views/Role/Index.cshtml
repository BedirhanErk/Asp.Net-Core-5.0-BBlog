@model List<EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h3>
                        <i class="fa fa-user-secret"></i> Roles
                        <a href="/Admin/Role/AddRole" style="position:absolute;right:40px"><i class="fa fa-plus"></i></a>
                    </h3>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Delete</th>
                                <th>Name</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="/Admin/Role/DeleteRole/@item.Id" style="cursor:pointer"><i style="color:red" class="fa fa-trash fa-lg"></i></a></td>
                                    <td>@item.Name</td>
                                    <td><a href="/Admin/Role/UpdateRole/@item.Id"><i class="fa fa-edit fa-lg"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
