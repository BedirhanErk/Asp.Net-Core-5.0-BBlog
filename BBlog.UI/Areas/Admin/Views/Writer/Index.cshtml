
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div id="divWriterList">

</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    function getWriterList() {
        $.ajax({
            contentType: "application/json",
            dataType: "json",
            type: "GET",
            url: "/Admin/Writer/GetWriterList",
            success: function (data) {
                var data = jQuery.parseJSON(data)

                var html = "";

                html += "<table class='table table-striped table-bordered'><thead><tr><th>Id</th><th>Name</th></tr></thead><tbody>";
                for (var i = 0; i < data.length; i++) {
                    var item = data[i];
                    html += "<tr><td>" + item.Id + "</td>";
                    html += "<td>" + item.Name + "</td></tr>";
                }
                html += "</tbody></table>"
                $("#divWriterList").append(html);
            }
        });
    }

    $(document).ready(function () {
        getWriterList();
    });
</script>