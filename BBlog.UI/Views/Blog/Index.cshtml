@model List<Blog>
@{
    ViewData["Title"] = "Blogs";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blogs</h3>
        <div class="inner-sec">
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="/Blog/BlogDetails/@item.BlogId">
                                <img src="@item.ThumbnailImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="/Blog/BlogDetails/@item.BlogId">
                                            <i class="far fa-calendar-alt"></i> @item.CreDate.ToString("dd/MMM/yyyy")
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="/Blog/BlogDetails/@item.BlogId">
                                            <i class="far fa-comment"></i> 0
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Blog/BlogDetails/@item.BlogId">
                                            <i class="fas fa-eye"></i> @item.Category.Name
                                        </a>
                                    </li>
                                </ul>
                                <h5 class="card-title">
                                    <a href="/Blog/BlogDetails/@item.BlogId">@item.Title</a>
                                </h5>
                                <p class="card-text mb-3">@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 130).LastIndexOf(" "))...</p>
                                <a href="/Blog/BlogDetails/@item.BlogId" class="btn btn-primary read-m">Read More</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>