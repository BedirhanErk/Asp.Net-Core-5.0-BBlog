@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Blog Detail";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<body>
    <section class="banner-bottom">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    @foreach (var item in Model)
                    {
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <a href="single.html">
                                        <img src="@item.Image" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @item.CreDate.ToString("dd/MMM/yyyy")
                                            </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="#">
                                                <i class="far fa-thumbs-up"></i> 0 Likes
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-comment"></i> 0 Comments
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <h3>
                                <a href="#">@item.Title </a>
                            </h3>
                            <input hidden id="hdnWriter" value="@item.WriterId" name="hdnWriter" />
                            <input hidden id="hdnBlog" value="@item.BlogId" name="hdnBlog" />
                            <p>
                                @item.BlogContent
                            </p>
                            <a href="/Blog/Index" class="btn btn-primary read-m">Go To Blog List</a>
                        </div>
                    }
                    @await Component.InvokeAsync("CommentListByBlog", ViewBag.id)
                    @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")
                </div>
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
                        @await Component.InvokeAsync("CategoryList")
                        @await Component.InvokeAsync("WriterLastBlog")
                        @await Component.InvokeAsync("RecentPosts")
                    </div>
                </aside>
            </div>
        </div>
    </section>
</body>
</html>


