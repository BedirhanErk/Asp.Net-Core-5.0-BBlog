@model UserUpdateViewModel
@{
    ViewData["Title"] = "Writer";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="page-header">
            <h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white mr-2">
                    <i class="mdi mdi-account"></i>
                </span> My Profile
            </h3>
        </div>
        <form class="forms-sample" method="post" asp-action="Index" asp-controller="Writer">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="row"><span asp-validation-for="UserName" class="text-danger"></span></div>
                <label>User Name<b class="text-danger">*</b></label>
                <input type="text" class="form-control" asp-for="UserName" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Name" class="text-danger"></span>
                <label for="exampleInputName1">Name<b class="text-danger">*</b></label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Surname" class="text-danger"></span>
                <label>Surname<b class="text-danger">*</b></label>
                <input type="text" class="form-control" asp-for="Surname" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Email" class="text-danger"></span>
                <label for="exampleInputEmail3">Email<b class="text-danger">*</b></label>
                <input type="email" class="form-control" asp-for="Email" />
            </div>
            <div class="form-group">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <label>Phone<b class="text-danger">*</b></label>
                <input type="tel" class="form-control" asp-for="PhoneNumber" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Image" class="text-danger"></span>
                <label>Image<b class="text-danger">*</b></label>
                <input type="text" class="form-control" asp-for="Image" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Password" class="text-danger"></span>
                <label>Password<b class="text-danger">*</b></label>
                <input type="password" class="form-control" asp-for="Password" />
            </div>
            <div class="form-group">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <label>Confirm Password<b class="text-danger">*</b></label>
                <input type="password" class="form-control" asp-for="ConfirmPassword" />
            </div>
            <button type="submit" class="btn btn-gradient-primary mr-2">Save</button>
        </form>
    </div>
</div>
