@model UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BBlog | Register</title>
    <link href="~/themes/BBlogAdminTheme/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/themes/BBlogAdminTheme/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/themes/BBlogAdminTheme/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/themes/BBlogAdminTheme/css/animate.css" rel="stylesheet">
    <link href="~/themes/BBlogAdminTheme/css/style.css" rel="stylesheet">
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h1>BB</h1>
            </div>
            <h3>Register to BBlog</h3>
            <form class="m-t" role="form" action="login.html">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" required="">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Surname" required="">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Confirm Password" required="">
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Register</button>

                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="login.html">Login</a>
            </form>
            <p class="m-t"> <small>BBlog  &copy; 2019</small> </p>
        </div>
    </div>

    <script src="~/themes/BBlogAdminTheme/js/jquery-3.1.1.min.js"></script>
    <script src="~/themes/BBlogAdminTheme/js/popper.min.js"></script>
    <script src="~/themes/BBlogAdminTheme/js/bootstrap.js"></script>
    <script src="~/themes/BBlogAdminTheme/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>
</html>
