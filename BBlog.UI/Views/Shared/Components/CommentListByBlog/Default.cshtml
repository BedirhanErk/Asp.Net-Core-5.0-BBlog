@model IEnumerable<Comment>

<div class="comment-top">
    <h4>Comments</h4>
    @if (Model.Count() == 0)
    {
        <div class="alert alert-primary" role="alert">
            There are no comments here. <a href="#">Do you want to leave the first comment?</a>
        </div>
    }
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/themes/BBlogTheme/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.UserName</h5>
                <p>
                    @item.CommentContent
                </p>
            </div>
        </div>
    }
</div>