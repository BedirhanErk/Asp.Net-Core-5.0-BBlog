
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>BBlog - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/themes/BBlogWriterTheme/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/themes/BBlogWriterTheme/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/themes/BBlogWriterTheme/assets/css/style.css?v1">
    <link rel="shortcut icon" href="~/favicon.ico?v1" />
</head>
<body>
    <div class="container-scroller">
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="#"><img src="~/images/logo-1.png" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="#"><img src="~/images/logo-mini-4.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <div class="search-field d-none d-md-block">
                    <form class="d-flex align-items-center h-100" action="#">
                        <div class="input-group">
                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input type="text" class="form-control bg-transparent border-0" placeholder="Search...">
                        </div>
                    </form>
                </div>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <div class="nav-profile-img">
                                <img src="~/themes/BBlogWriterTheme/assets/images/faces/face1.jpg" alt="image">
                                <span class="availability-status online"></span>
                            </div>
                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">Name Surname</p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-cached mr-2 text-success"></i> Activity Log
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-logout mr-2 text-primary"></i> Signout
                            </a>
                        </div>
                    </li>
                    <li class="nav-item d-none d-lg-block full-screen-link">
                        <a class="nav-link">
                            <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                        </a>
                    </li>
                    @await Component.InvokeAsync("WriterMessageNotification")
                    @await Component.InvokeAsync("WriterNotification")             
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" href="#">
                            <i class="mdi mdi-power"></i>
                        </a>
                    </li>
                    <li class="nav-item nav-settings d-none d-lg-block">
                        <a class="nav-link" href="#">
                            <i class="mdi mdi-format-line-spacing"></i>
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <div class="container-fluid page-body-wrapper">
            @await Html.PartialAsync("~/Views/Writer/PartialWriterLeftNavbar.cshtml")
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                @await Html.PartialAsync("~/Views/Writer/PartialWriterFooter.cshtml")
            </div>
        </div>
    </div>
    <script src="~/themes/BBlogWriterTheme/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/themes/BBlogWriterTheme/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/themes/BBlogWriterTheme/assets/js/off-canvas.js"></script>
    <script src="~/themes/BBlogWriterTheme/assets/js/hoverable-collapse.js"></script>
    <script src="~/themes/BBlogWriterTheme/assets/js/misc.js"></script>
    <script src="~/themes/BBlogWriterTheme/assets/js/dashboard.js"></script>
    <script src="~/themes/BBlogWriterTheme/assets/js/todolist.js"></script>
</body>
</html>
